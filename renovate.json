{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",    
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "GitHub Actions Updates",
      "automerge": true
    },
    {
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Docker Updates",
      "automerge": true
    }
  ]
}
